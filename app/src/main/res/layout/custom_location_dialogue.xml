<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:background="@color/bg_white"
        >
        <LinearLayout
            android:background="@color/bg_white"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_10dp"
                android:paddingLeft="@dimen/details_space"
                android:paddingRight="@dimen/details_space"
                android:text="Confirm location"
                android:gravity="center"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textColor="@color/listview_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/listview_background" />

            <TextView
                android:id="@+id/Id_tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_marginLeft="@dimen/details_space"
                android:layout_marginRight="@dimen/details_space"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:text="Airoli , Navi Mumbai Airoli , Navi Mumbai Airoli , Navi Mumbai Airoli , Navi Mumbai Airoli , Navi Mumbai Airoli , Navi Mumbai Airoli , Navi Mumbai Airoli , Navi Mumbai"
                android:textColor="@color/bg_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/dimen_10dp">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    />

                <TextView
                    android:id="@+id/Id_btn_cancel"
                    android:layout_marginLeft="@dimen/nav_btn_font"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:layout_width="0dp"
                    android:text="Cancel"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    android:textColor="@color/bg_white"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/listview_background" />

                <TextView
                    android:id="@+id/Id_btn_confirm"
                    android:layout_marginLeft="@dimen/nav_btn_font"
                    android:layout_marginRight="@dimen/nav_btn_font"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:text="OK"
                    android:textSize="16sp"
                    android:textColor="@color/bg_white"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/listview_background" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
